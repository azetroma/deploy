
@section MainMenu{
    <div class="navbar  navbar-inverse adobe big-font navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" id="side-menu-toggle">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" @(String.IsNullOrEmpty(ViewBag.Title) ? "href='#'" : "")>
                    @ViewBag.Title
                </a>

            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav" id="MainMenu">
                    <li data-type="2"><a href="@Href("~")"><span data-trans-key="mainmenu_dashboard"></span></a></li>
                    <li data-type="1"><a href="@Href("~")#Moderation/DataSource/index/"><span data-trans-key="mainmenu_management"></span></a></li>
                </ul>            @{

                    var l = BLL.ApplicationLicense.ClientLicenseManager.GetInstance();
                    if (l == null || l.License == null) { Response.Redirect(@Url.Action("LogOff", "Account")); }
                    var e = l.License.EndTime;
                    var r = (e - DateTime.Now).TotalDays;
                    var remine = r < 15 ? String.Format("{0}", (int)r)
                        .Replace("0", "۰")
                        .Replace("1", "۱")
                        .Replace("2", "۲")
                        .Replace("3", "۳")
                        .Replace("4", "۴")
                        .Replace("5", "۵")
                        .Replace("6", "۶")
                        .Replace("7", "۷")
                        .Replace("8", "۸")
                        .Replace("9", "۹")
                        : "";

                    var obj = Session["IsHashLogin"];
                    var isHash = (bool)(obj ?? false);
                }
                @if (isHash) {
                    <div class="navbar-text pull-right " style="line-height: 20px; font-size: 22px;">
                        <a onclick="window.location.reload()" class="pointer navbar-link none-decoration" title="Refresh">
                            @{var u = BLL.Security.Users.getUserByUsername(User.Identity.Name);
                                if (!String.IsNullOrEmpty(u.FirstName + u.LastName)) {
                                    <text>
                                        @u.FirstName @u.LastName
                                    </text>
                                } else {
                                    <text>
                                        @u.Username
                                    </text>
                                }
                            }
                            <span class="glyphicon glyphicon-refresh small-icon "></span>
                        </a>

                    </div>

                                } else {
                                    @*<div class="navbar-text pull-right " style="line-height: 0px; font-size: 22px;">
                                            <a href="@Url.Action("LogOff", "Account")" class=" navbar-link none-decoration" data-trans-key="خروج" data-trans-attr="title">
                                                @{var u = BLL.Security.Users.getUserByUsername(User.Identity.Name);
                                                    if (u == null) { Response.Redirect(@Url.Action("LogOff", "Account")); }
                                                    if (!String.IsNullOrEmpty(u.FirstName + u.LastName)) {
                                                        <text>
                                                            @u.FirstName @u.LastName
                                                        </text>
                                                    } else {
                                                        <text>
                                                            @u.Username
                                                        </text>
                                                    }
                                                }
                                                <span class="glyphicon glyphicon-off small-icon"></span>
                                            </a>
                                        </div>*@
                var u = BLL.Security.Users.getUserByUsername(User.Identity.Name);
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="glyphicon glyphicon-user small-icon"></span></a>
                        <ul class="dropdown-menu">
                            <li><a><span data-trans-key="sign_as"></span> <b> @(String.IsNullOrEmpty(u.FirstName + u.LastName) ? u.Username : u.FirstName + " " + u.LastName )</b></a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("Index", "Profile")"><span data-trans-key="profile"></span></a></li>
                            <li><a href="@Url.Action("LogOff", "Account")"><span data-trans-key="signout"></span></a></li>
                        </ul>
                    </li>
                    <li>&nbsp;</li>
                </ul>
                                }




                <div class="navbar-text pull-right licence-message ">
                    <div class="persian">@(!String.IsNullOrEmpty(remine) ? "زمان باقیمانده از جواز استفاده: " + remine + " روز" : "")</div>
                </div>



            </div>
        </div>
    </div>
    <div style="margin-top: 0px; position: fixed; left: 35%; z-index: 1002; width:250px; text-align:center; display:none">
        <div id="app-loading" class="alert alert-success" style="border-radius: 0 0 4px 4px; padding: 5px 15px; margin-bottom: 0; font-family:Droid; ">
            <p id="app-loading-text" style="padding: 0 15px;"><span data-trans-key="در حال بارگذاری"> </span></p>
            <p id="app-info-text" style="padding: 0 15px;"></p>
        </div>
    </div>
}

